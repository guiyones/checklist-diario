<button id="menu-open"
  class="p-2 m-2 rounded-md hover:bg-gray-200 transition">
  <!-- Ícone hamburguer -->
  <svg xmlns="http://www.w3.org/2000/svg" fill="none"
       viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
       class="w-6 h-6 text-gray-700">
    <path stroke-linecap="round" stroke-linejoin="round"
          d="M4 6h16M4 12h16M4 18h16" />
  </svg>
</button>

<!-- SIDEBAR -->
<aside id="sidebar"
       class="fixed left-0 top-0 h-full w-60 bg-white shadow-xl z-50
              -translate-x-full transition-transform duration-300">
  
    <!-- Botão para fechar dentro do menu -->
  <button id="menu-close"
    class="absolute top-4 right-4 p-2 rounded-md hover:bg-gray-200 transition">
    <!-- Ícone X (heroicon) -->
    <svg xmlns="http://www.w3.org/2000/svg" 
         fill="none" 
         viewBox="0 0 24 24" 
         stroke-width="2" 
         stroke="currentColor" 
         class="w-6 h-6 text-gray-700">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <!-- Cabeçalho do menu -->
  <div class="p-4 border-b flex justify-between items-center">
    <span class="text-lg font-bold text-emerald-600">Menu</span>
  
  <!-- Links -->
  <nav class="p-4 space-y-2">
    <%= link_to root_path,
      class: "block px-4 py-2 rounded-lg hover:bg-gray-100 text-gray-700 font-medium" do %>
      Início
    <% end %>

    <%= link_to diarios_path,
      class: "block px-4 py-2 rounded-lg hover:bg-gray-100 text-gray-700 font-medium" do %>
      Diário
    <% end %>

    <%= link_to "#",
      class: "block px-4 py-2 rounded-lg hover:bg-gray-100 text-gray-700 font-medium" do %>
      Configurações
    <% end %>
  </nav>
</aside>

<!-- Overlay para mobile -->
<div id="menu-overlay"
     class="fixed inset-0 z-40 "></div>

