<% content_for :title, "Diários" %>

<div class="max-w-4xl mx-auto min-h-screen px-4 py-5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 text-green-600 font-medium rounded-md mb-6 text-center" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <!-- Top bar -->
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Meus Diários</h1>

    <%= link_to new_diario_path,
      class: "w-10 h-10 flex items-center justify-center rounded-full bg-emerald-500 hover:bg-emerald-600 text-white shadow-md active:scale-95 transition-transform duration-150" do %>
      <%= heroicon "plus", variant: :outline, options: { class: "w-5 h-5" } %>
    <% end %>
  </div>

  <!-- Tabela -->
  <div class="overflow-hidden rounded-xl shadow-sm border border-gray-200 bg-white">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-100 text-gray-700 text-sm font-semibold">
        <tr>
          <th class="px-6 py-3 text-left">Data</th>
          <th class="px-6 py-3 text-left">Dia</th>
          <th class="px-6 py-3 text-center">Pontuação</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 text-gray-800">
        <% @diarios.each do |diario| %>
          <tr class="hover:bg-gray-50 cursor-pointer transition" onclick="window.location='<%= diario_path(diario) %>'">
            <td class="px-6 py-3"><%= l diario.data %></td>
            <td class="px-6 py-3"><%= diario.dia_semana %></td>
            <td class="px-6 py-3 text-center font-semibold text-emerald-600"><%= diario.pontuacao %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

